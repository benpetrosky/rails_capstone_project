<h1>Hola <%= @profile.username %></h1>

<%=image_tag @profile.profile_pic.url(:medium) %>

<% if @profile != current_user%>

<p>Send <%= @profile.username %> a message!</p>

<p><%= link_to "Send a Message", new_user_message_path(@profile) %></p>
<% end %>

<% if @profile === current_user && @profile.messages.any? %>

  Here are your messages
  <ul>
    <% @profile.messages.each do |message| %>

    <li>
      <%= message.content %>
      <br>
      from: <%= User.find(message.sender).username %>
    </li>
  </ul>

  <% end %>

<% end %>
